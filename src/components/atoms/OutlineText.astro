---
const { content, translateX, translateY, fontSize, letterSpacing, opacity } = Astro.props;
---

<div class="relative">
    <div 
        class="absolute outline-text select-none -z-10 text-transparent"
        style=`
            font-size: ${fontSize ? fontSize : '175px'};
            letter-spacing: ${letterSpacing ? letterSpacing : '-0.075em'};
            opacity: ${opacity ? opacity : '0.25'};
            transform: translateX(${translateX ? translateX : '0'}) translateY(${translateY ? translateY : '0'});
            -webkit-text-stroke: 2px #ffffff;
        `
    >{content}</div>
    <slot />
</div>